          <%}%>


          <div class="tweetsListShowDiv">
              <%if(tweetsList.length!=0){ %>
                <canvas id="tweetsChart" date=<%=tweetsFrequency%>></canvas>
                <%for(var i=0;i<tweetsList.length;i++){%>
                  <div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 tweetShowBox">
                    <div class="tweetLeft col-md-2">
                      <img class="img-rounded headPortrait" src="<%=tweetsList[i].headProfileImg%>" alt="">
                    </div>
                    <div class="tweetRight col-md-10">
                      <div class="tweetHeader">
                        <strong class="fullName"><%=tweetsList[i].userName%></strong>
                        <span class="username">@<b><a href="<%=tweetsList[i].authorPage%>" target="_blank"><%=tweetsList[i].screen_name%></a></b></span>
                        <small class="time">
                          <span>data:<%=tweetsList[i].time%></span>
                        </small>
                      </div>
                      <div class="tweetContent">
                        <p class="TweetTextSize tweet-text"><%=tweetsList[i].tweetText%></p>
                        <a href="<%=tweetsList[i].originTweetURL%>" target="_blank">origin tweet</a>
                          <%if(tweetsList[i].tweetImg!=''){%>
                            <img class="img-rounded tweetImg" src="<%=tweetsList[i].tweetImg%>" width="450" height="auto" alt="">
                          <%}%>
                      </div>
                    </div>
                  </div>
                <%}%>
              <%}%>
